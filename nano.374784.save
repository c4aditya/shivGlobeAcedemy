<VirtualHost *:80>
    ServerName shivglobeacademy.com
    ServerAlias www.shivglobeacademy.com
    DocumentRoot /var/www/shivglobeacademy/shivglobe

    <Directory /var/www/shivglobeacademy/shivglobe>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/shivglobe_error.log
    CustomLog ${APACHE_LOG_DIR}/shivglobe_access.log combined
</VirtualHost>
